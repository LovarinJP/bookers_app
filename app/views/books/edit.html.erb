<div class="edit-box">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>erros prohibit this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ui>
<% end %>

<div class="form-box">
<%= form_with model: @book do |f| %>
  <div class="form-text">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>

  <div class="form-area">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>

  <div class="form-submit">
  <%= f.submit 'Update Book' %>
  </div>

  <div class="link-box">
    <div class="show-link">
    <%= link_to 'Show', book_path %>
    </div>

    <div class="back-link">
    <%= link_to 'Back', books_path %>
    </div>
  </div>
<% end %>
</div>
</div>
